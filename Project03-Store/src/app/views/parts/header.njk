<header>

    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>Launchstore</h1>
                <h2>COMPRA E VENDA</h2>
            </div>
        </a>

        <form class="search"  method="get" action="/produtos/search">
            <input type="text" name="filter" placeholder="Buscar por produtos"
                {% if pesquisar.filter %}
                    value='{{search.filter}}'
                {% endif %}>
        </form>

        <nav class="primary">
            <ul>
                <li>
                    <a href="/produtos/create">
                        <i class="material-icons">add</i>
                        Novo Anúncio
                    </a>
                </li>
                <li class="accounts">
                    <a href="/conta">
                        <i class="material-icons">account_circle</i>
                        Minha Conta
                    </a>
                    {% if session.userId %}
                    <ul class="submenu">
                        <li>
                            <a href="/usuario">
                                Configurações
                            </a>                            
                        </li>
                        <li>
                            <a href="">
                                Meus pedidos
                            </a>                            
                        </li>
                        <li>
                            <a href="">
                                Minhas vendas
                            </a>                            
                        </li>
                        <li>
                            <form action="/usuario/logout" method="POST">
                                <button>
                                    Sair
                                </button>
                            </form>
                        </li>
                    </ul>
                    {% endif %}
                </li>
            </ul>
        </nav>
    </div>
</header>