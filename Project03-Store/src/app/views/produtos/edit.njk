{% extends 'layout.njk' %}

{% block content %}

<section class="container form">
    <form method="POST" action="/produtos?_method=PUT" enctype="multipart/form-data">
        <div class="header">
            <h3>Editar Produto</h3>
        </div>
        <div class="fields">
            {% include 'produtos/fields.njk' %}
            <input type="hidden" name="id" value={{produto.id}}>
        </div>

        <button class="button edit" type="submit">Atualizar</button>
    </form>

    <form id="formExcluir" action="/produtos?_method=DELETE" method="post">
        <input type="hidden" name="id" value={{produto.id}}>
        <button class="button delete" type="submit">Deletar</button>
    </form>
</section>

<script>
    const formExcluir=document.querySelector("#formExcluir");
    formExcluir.addEventListener("submit",function(event){
        if(!window.confirm("Deseja deletar?"))
            event.preventDefault();
    })
    </script>

{% endblock content %}
