{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style='background: url({{membro.avatar_url}}) no-repeat top center / cover '>
            <img src="" alt="">
        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Instrutor</div>
                <div>{{membro.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{membro.idade}}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>{{membro.sexo}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                {% for servico in membro.servicos %}
                    <span>{{servico}}</span>
                {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{membro.created_at}}</div>
            </div>
            <a class="button" href="/membros/{{membro.id}}/editar">Editar</a>
        </section> 
    </div>
{% endblock content %}