{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>
                        Instrutor
                    </th>
                    <th>
                        Atendimento
                    </th>
                    <th>
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for membro in membros %}
                    <tr>
                        <td>
                            <span style="background-image: url({{membro.avatar_url}});"></span>
                            {{membro.name}}
                        </td>
                        <td>
                            {{membro.servicos}}
                        </td>
                        <td>
                            <a href="membros/{{membro.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock content %}