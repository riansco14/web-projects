{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style='background: url({{membro.avatar_url}}) no-repeat top center / cover '>
            <img src="" alt="">
        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Membro</div>
                <div>{{membro.name}}</div>
            </div>
            <div class="item">
                <div>Email</div>
                <div>{{membro.email}}</div>
            </div>
            <div class="item">
                <div>Aniversario</div>
                <div>{{membro.idade}}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>{{membro.sexo}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>{{membro.tipo_sangue}}</div>
            </div>
            <div class="item">
                <div>Peso(kg)</div>
                <div>{{membro.peso}}</div>
            </div>
            <div class="item">
                <div>Altura(cm)</div>
                <div>{{membro.altura}}</div>
            </div>
            <a class="button" href="/membros/{{membro.id}}/editar">Editar</a>
        </section> 
    </div>
{% endblock content %}