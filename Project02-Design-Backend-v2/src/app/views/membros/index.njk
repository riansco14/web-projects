{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <div class="table-header-options">
                <a class="button" href="/membros/cadastro">Novo</a>
                <form action="/membros" method="GET">
                    <input type="text" name="filter" placeholder="Filtrar por nome ou Email" value="{{filter}}">
                    <button type="submit">Filtrar</button>
                </form>
            </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>
                        Instrutor
                    </th>
                    <th>
                        Atendimento
                    </th>
                    <th>
                        Peso
                    </th>
                    <th>
                        Altura
                    </th>
                    <th>
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for membro in membros %}
                    <tr>
                        <td>
                            <span style="background-image: url({{membro.avatar_url}});"></span>
                            {{membro.name}}
                        </td>
                        <td>
                            {{membro.email}}
                        </td>
                        <td>{{membro.peso}}kg</td>
                        <td>{{membro.altura}}cm</td>
                        <td>
                            <a href="membros/{{membro.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
        <div class="pagination"
            data-total={{pagination.total}}
            data-page={{pagination.page}}
            data-filter={{filter}}
        >
    </div>
{% endblock content %}