{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style='background: url({{instrutor.avatar_url}}) no-repeat top center / cover '>
            <img src="" alt="">
        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Instrutor</div>
                <div>{{instrutor.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{instrutor.idade}}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>{{"Masculino" if instrutor.sexo== "M" else "Feminino"}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                {% for servico in instrutor.servicos %}
                    <span>{{servico}}</span>
                {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{instrutor.created_at}}</div>
            </div>
            <a class="button" href="/instrutores/{{instrutor.id}}/editar">Editar</a>
        </section> 
    </div>
{% endblock content %}