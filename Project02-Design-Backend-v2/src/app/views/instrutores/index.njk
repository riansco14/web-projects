{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <div class="table-header-options">
                <a class="button" href="/instrutores/cadastro">Novo</a>
                <form action="/instrutores" method="GET">
                    <input type="text" name="filter" placeholder="Filtrar por nome" value="{{filter}}">
                    <button type="submit">Filtrar</button>
                </form>
            </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>
                        Instrutor
                    </th>
                    <th>
                        Atendimento
                    </th>
                    <th>
                        Alunos
                    </th>
                    <th>
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for instrutor in instrutores %}
                    <tr>
                        <td>
                            <span style="background-image: url({{instrutor.avatar_url}});"></span>
                            {{instrutor.name}}
                        </td>
                        <td>
                            {{instrutor.servicos}}
                        </td>
                        <td>{{instrutor.total_alunos}}</td>
                        <td>
                            <a href="instrutores/{{instrutor.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
        <div class="pagination"
            data-total={{pagination.total}}
            data-page={{pagination.page}}
            data-filter={{filter}}
        >
        
        </div>
    </div>
{% endblock content %}